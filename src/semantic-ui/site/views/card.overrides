/*******************************
    User Variable Overrides
*******************************/

.ui.card.movie {
  opacity:1;
  transition: width 1s, height 1s, opacity 1s 1.5s;
  &:hover {
    filter: invert(1) contrast(1.2);
    transition: all .2s ease-in-out;
  }
  &,
  .image {
    filter: invert(1);
  }
  .image.no-image {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #2b2b2b;
    img {
      filter: invert(0.9) brightness(1.5);
    }
  }
}
